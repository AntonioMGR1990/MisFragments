<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.usuario.misfragments.BotoneraFragment">

    <Button
        android:id="@+id/Primero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/chevron_double_left"
        android:layout_weight="1" />

    <Button
        android:id="@+id/Anterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/chevron_left"
        android:layout_weight="1" />

    <Button
        android:id="@+id/Siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/chevron_right"
        android:layout_weight="1" />

    <Button
        android:id="@+id/Ultimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/chevron_double_right"
        android:layout_weight="1" />

</LinearLayout>
